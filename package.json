{
  "name": "cloudreno-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/design-library --port=3002",
    "dev:quote": "npm run dev --workspace=apps/quote-app",
    "dev:all": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules",
    "install:all": "npm install",
    "generate-sitemap": "npm run generate-sitemap --workspace=apps/design-library"
  },
  "devDependencies": {
    "typescript": "^5",
    "tsx": "^4.19.3"
  }
}